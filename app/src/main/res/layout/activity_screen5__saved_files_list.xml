<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_defaults"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:id="@+id/activity_screen5__saved_files_list"
    tools:context="gj.paintmeister.Screen5_SavedFilesList"
    android:background="@drawable/bk_bk">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_picture"
        android:layout_centerInParent="true"
        android:textColor="@color/lt_grey"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"/>


</RelativeLayout>
